<% if current_user.likes?(subject) %>
	<%= link_to "Unlike", likes_path(subject_id: subject.id, type: subject.class.to_s.constantize), method: :delete, remote: true %>
<% else %>
	<%= link_to "Like", likes_path(subject_id: subject.id, type: subject.class.to_s.constantize), method: :post, remote: true %>
<% end %>