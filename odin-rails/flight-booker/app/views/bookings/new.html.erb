<%= form_for @booking do |f| %>

	<%= f.hidden_field :flight_id, value: @flight.id %>

<div class="page-header">
	<h1><%= render 'flights/info', flight: @flight %></h1>
</div>

	<% @booking.passengers.each_with_index do |pass, i| %>
			<%= f.fields_for :passengers, pass do |p| %>
			<fieldset class="passenger-form">
				<legend>Passenger <%= i + 1 %></legend>
				<div class="form-group">
					<%= p.label :name %>
					<%= p.text_field :name %>
				</div>
				<div class="form-group">
					<%= p.label :email %>
					<%= p.email_field :email %>
				</div>
			</fieldset>
		<% end %>
	<% end %>

	<div class="form-actions">
		<%= f.submit "Book flight", :class => 'btn btn-primary' %>
	</div>

<% end %>
<%= link_to "Cancel", root_path %>